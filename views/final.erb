<head>
	<title>Costello's | Home</title>
	<link rel="stylesheet" type="text/css" href="css/dashboard.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
	<link href="https://fonts.googleapis.com/css?family=Italianno" rel="stylesheet">
</head>

<body style="background-color: #000;">
	<div class="wrapper">
		<header>
			<nav>
				<div class="menu-icon">
					<i class="fa fa-bars fa-2x"></i>
				</div>
				<div class="logo">
					<a href="/">Costello<span>'</span>s</a>
				</div>
				<div class="menu">
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="#">About</a></li>
						<li><a href="/custom" class="active">Make It</a></li>
						<li><a href="#">Contact</a></li>
					</ul>
				</div>
			</nav>
		</header>	
	</div>

		<div class="app-section2">
			<h1 style="text-align: center">Thank you for choosing Costelo's</h1>
			<h3 style="color: white; text-align: center"><%= first%></h3>
			<h2 style="color: #fff"><%= address%></h2>
			<p style="color: white">ETA: 30 minutes</p>
			<h2 style="color: white"><%= order%></h2>
			<div id="paypal-button-container"></div>
			
			<div class="deliver">
				<a href="/"><button type="submit" id="btn2">Back</button></a>
			</div>
		</div>

			
		
		<script src="https://www.paypalobjects.com/api/checkout.js"></script>
		<script>
			paypal.Button.render({
			env: 'sandbox',
			style: {
			  layout: 'horizontal',
			  size:   'small',
			  shape:  'pill',
			  color:  'silver'
			},
			funding: {
			  allowed: [
			    paypal.FUNDING.CARD,
			    paypal.FUNDING.CREDIT
			  ],
			  disallowed: []
			},
			client: {
			  sandbox: 'AZDxjDScFpQtjWTOUtWKbyN_bDt4OgqaF4eYXlewfBP4-8aqX3PiV8e1GWU6liB2CUXlkA59kJXE7M6R',
			  production: '<insert production client id>'
			},
			payment: function (data, actions) {
			  return actions.payment.create({
			    payment: {
			      transactions: [
			        {
			          amount: {
			            total: '0.01',
			            currency: 'USD'
			          }
			        }
			      ]
			    }
			  });
			},
			onAuthorize: function (data, actions) {
			  return actions.payment.execute()
			    .then(function () {
			      window.alert('Payment Complete!');
			    });
			}
			}, '#paypal-button-container');
			</script>	
</body>

<script type="text/javascript">
	$(document).ready(function() {
		$(".menu-icon").on("click", function() {
			$("nav ul").toggleClass("showing");
		});
	});

	$(window).on("scroll", function() {
		if($(window).scrollTop()) {
			$('nav').addClass('black');
		}
		else {
			$('nav').removeClass('black');
		}
	});
</script>